{
	"manifest_version": 2,

	"name": "Dark Horse downloader",
	"description": "Download Dark Horse comic books directly from your digital library web page",
	"version": "1.0",

	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},

	"content_scripts": [{
		"matches": ["https://digital.darkhorse.com/library/*"],
		"js": ["main.js"],
		"css": ["style.css"]
	}],

	"permissions": [
		"downloads",
		"notifications"
	]
}
